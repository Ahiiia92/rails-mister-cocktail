<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_tag @cocktail.photo.key %>');">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 col-md-8">
      <% @cocktail.doses.each do |dose|%>
        <div class="card-product">
          <%-#<%= cl_image_tag @doses.photo.key, height: 300, width: 400, crop: :fill %>
          <%= cl_image_tag 'photo-1542849187-5ec6ea5e6a27_oc8iry', height: 300, width: 400, crop: :fill %>
          <div class="card-product-infos">
            <h2> <%= dose.ingredient.name %></h2>
            <p><%= dose.description %></p>
          </div>
        </div>
      <% end %>
      <div class="col-8 col-md-8 text-align-center">
        <div class= "btn btn-flat" ><%= link_to "<< Back to Cocktails", root_path %>

        </div>
        <div class= "btn btn-flat" ><%= link_to "Add Ingredients >>", new_cocktail_dose_path(@cocktail) %>
        </div>
      </div>
    </div>
    <div class="col-4 col-md-4">
      <div class="card-product">
        <div class="card-product-infos">
          <h2> DESCRIPTION </h2>
          <p>ADD SOME TEXT HERE</p>
        </div>
      </div>
    </div>
  </div>
</div>

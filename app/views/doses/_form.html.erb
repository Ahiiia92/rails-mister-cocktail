<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: "btn btn-flat" %>
      <% end %>

    </div>
  </div>
</div>
